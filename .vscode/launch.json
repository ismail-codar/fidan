  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "babel-plugin-fidan-jsx (test/index.ts)",
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceFolder}/packages/babel-plugin-fidan-jsx",
      "sourceMaps": true,
      "args": [
        "${workspaceFolder}/packages/babel-plugin-fidan-jsx/test/index.ts", "todomvc"
      ],
      "env": {
        "TS_NODE_COMPILER_OPTIONS": "{\"module\":\"commonjs\"}",
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ts-node",
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${fileDirname}",
      "args": ["${file}"]
    }
  ]
}
